import React from 'react';
import ReactDOM from 'react-dom/client';
import { createBrowserRouter, RouterProvider } from 'react-router-dom';
import RootLayout from './components/Layout/RootLayout';
import HomePage from './pages/homepage';
import './index.css';

// 1. Definizione della struttura dei percorsi (Routes)
const router = createBrowserRouter([
  {
    // Il percorso principale "/"
    path: '/',
    // L'elemento di layout che contiene l'Header e la struttura generale
    element: <RootLayout />,
    // errorElement: <ErrorPage />, 
    
    // I figli sono le pagine che verranno visualizzate all'interno dell'Outlet del RootLayout
    children: [
      {
        // Il percorso vuoto è l'indice (la pagina iniziale)
        index: true, 
        element: <HomePage />, // La pagina che conterrà Hero e Meals
      },
      // Qui in futuro potresti aggiungere: 
      // { path: 'cart', element: <CartPage /> },
      // { path: 'meal/:mealId', element: <MealDetailPage /> },
    ],
  },
]);

// 2. Renderizzazione dell'Applicazione
ReactDOM.createRoot(document.getElementById('root')!).render(
  <React.StrictMode>
    <RouterProvider router={router} />
  </React.StrictMode>,
);